{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "CMake",
            "args": ["-G 'NMake Makefiles' -DCMAKE_BUILD_TYPE=Debug ..", "-I '${ENV:PICO_DRV}/pico/micropython/**, ${ENV:PICO_DRV}/pico/pico-sdk/src/**'" ]
        },
        {
            "label": "Make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "nmake",
            "args": ["/F", "${command:cpptools.activeConfigName}"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
     ]
}